<script type="text/javascript">

    $( document ).ready(function() {

        function showNotif(from, align, color, message, icon) {

            $.notify({
                icon: icon,
                message: message

            }, {
                type: color,
                timer: 4000,
                placement: {
                    from: from,
                    align: align
                }
            });
        }

        

        function populatePax(paxType, paxName, surname){

            if(typeof paxType == 'undefined'){
                paxType = "INF";
            }

            if( paxType == "ADT") {
                if(paxName.indexOf("MR") == -1){
                    paxName = paxName.replace("MS", "");
                    var paxGender = "Female";
                }else{
                    paxName = paxName.replace("MR", "");
                    var paxGender = "Male";
                }
            }else{
                if(paxName.indexOf("MSTR") == -1){
                    paxName = paxName.replace("MISS", "");
                    var paxGender = "Female";
                }else{
                    paxName = paxName.replace("MSTR", "");
                    var paxGender = "Male";
                }
            }

        
            
            $('#showResults').append(
                '<tr class="eachPax">' +
                    '<td>' + paxName +'</td>' +
                    '<td>' + surname +'</td>' +
                    '<td>' + paxGender + '</td>' +
                    '<td>' + paxType + '</td>' +
                '</tr>' 
            );
        }

        function populateSegment(flightNumber, origin, destination, departureDate, departureTime, arrivalDate, arrivalTime, flightClass, company){
            
            $('#showResultsSegments').append(
                '<tr class="eachPax">' +
                    '<td>' + flightNumber +'</td>' +
                    '<td>' + origin +'</td>' +
                    '<td>' + destination +'</td>' +
                    '<td>' + moment(departureDate, 'DDMMYY').format('MM-DD-YYYY') + ' ' + departureTime +'</td>' +
                    '<td>' + moment(arrivalDate, 'DDMMYY').format('MM-DD-YYYY') + ' ' + arrivalTime +'</td>' +
                    '<td>' + flightClass +'</td>' +
                    '<td>' + company +'</td>' +
                '</tr>' 
            );

        }
        

        $('form').submit(function( event ) {

            event.preventDefault(); 

            if($("#txtRL").val() != ""){

                $('.tblData tbody > tr').remove();

                $.ajax({
                    url:"./record",
                    type:"POST",
                    data:{
                        recordLocator: $("#txtRL").val() || ''
                    },
                    contentType:"application/x-www-form-urlencoded; charset=UTF-8",
                    dataType:"json",
                    statusCode: {
                        200: function (response) {
                            $('.eachSegment').remove();
                            $('#insertPN').text($("#txtRL").val())
                            if(typeof response.dataElementsMaster.dataElementsIndiv[7].serviceRequest.ssr.freeText != 'undefined'){
                                var amount = response.dataElementsMaster.dataElementsIndiv[7].serviceRequest.ssr.freeText.substring(17);
                                var strPHP = amount.substring(0,3);
                                if(strPHP == "PHP"){
                                    amount = response.dataElementsMaster.dataElementsIndiv[7].serviceRequest.ssr.freeText.substring(17);
                                }else{
                                    amount = "No Price";
                                }
                            }else{
                                var amount = "No Price";
                            }

                            $('#insertAmount').text(amount);
                            $('#insertOfficeID').text(response.securityInformation.responsibilityInformation.officeId);
                            
                            //indexOF lou ard hinumdumi
                            if(typeof response.travellerInfo.length == 'undefined'){

                                var paxType = response.travellerInfo.passengerData.travellerInformation.passenger.type;
                                var paxName = response.travellerInfo.passengerData.travellerInformation.passenger.firstName;
                                var paxSuname = response.travellerInfo.passengerData.travellerInformation.traveller.surname;

                                populatePax(paxType, paxName, paxSuname);

                            }else{

                                response.travellerInfo.forEach(function(eachTraveler){

                                    var paxType = eachTraveler.passengerData.travellerInformation.passenger.type;
                                    var paxName = eachTraveler.passengerData.travellerInformation.passenger.firstName;
                                    var paxSuname = eachTraveler.passengerData.travellerInformation.traveller.surname;

                                    populatePax(paxType, paxName, paxSuname);

                                    
                                });

                            }

                            if(typeof response.originDestinationDetails.itineraryInfo.length == 'undefined'){

                                var flightNumber = response.originDestinationDetails.itineraryInfo.travelProduct.productDetails.identification;
                                var origin = response.originDestinationDetails.itineraryInfo.travelProduct.boardpointDetail.cityCode;
                                var destination = response.originDestinationDetails.itineraryInfo.travelProduct.offpointDetail.cityCode;
                                var departureDate = response.originDestinationDetails.itineraryInfo.travelProduct.product.depDate;
                                var departureTime = response.originDestinationDetails.itineraryInfo.travelProduct.product.depTime.slice(0, 2) + ":" + response.originDestinationDetails.itineraryInfo.travelProduct.product.depTime.slice(2);
                                var arrivalDate = response.originDestinationDetails.itineraryInfo.travelProduct.product.arrDate;
                                var arrivalTime = response.originDestinationDetails.itineraryInfo.travelProduct.product.arrTime.slice(0, 2) + ":" + response.originDestinationDetails.itineraryInfo.travelProduct.product.arrTime.slice(2);
                                var flightClass = response.originDestinationDetails.itineraryInfo.travelProduct.productDetails.classOfService;
                                var company = response.originDestinationDetails.itineraryInfo.travelProduct.companyDetail.identification;

                                populateSegment(flightNumber, origin, destination, departureDate, departureTime, arrivalDate, arrivalTime, flightClass, company);

                            }else{

                                response.originDestinationDetails.itineraryInfo.forEach(function(eachSegment){
                                
                                    var flightNumber = eachSegment.travelProduct.productDetails.identification;
                                    var origin = eachSegment.travelProduct.boardpointDetail.cityCode;
                                    var destination = eachSegment.travelProduct.offpointDetail.cityCode;
                                    var departureDate = eachSegment.travelProduct.product.depDate;
                                    var departureTime = eachSegment.travelProduct.product.depTime.slice(0, 2) + ":" + eachSegment.travelProduct.product.depTime.slice(2);
                                    var arrivalDate = eachSegment.travelProduct.product.arrDate;
                                    var arrivalTime = eachSegment.travelProduct.product.arrTime.slice(0, 2) + ":" + eachSegment.travelProduct.product.arrTime.slice(2);
                                    var flightClass = eachSegment.travelProduct.productDetails.classOfService;
                                    var company = eachSegment.travelProduct.companyDetail.identification;

                                    populateSegment(flightNumber, origin, destination, departureDate, departureTime, arrivalDate, arrivalTime, flightClass, company);

                                });

                            }



                            
                            
                            

                            $(".tblPnr").show();

                            $("#txtRL").val('');
 
                        }
                    }
                })
            }else{
                showNotif('top','right', 'danger', 'Input record locator', 'clear');
            }

            

        });

    });


    

