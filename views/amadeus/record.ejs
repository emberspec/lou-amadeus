<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.1/moment.min.js"></script>

<script type="text/javascript">

    $( document ).ready(function() {

        $('form').submit(function( event ) {

            event.preventDefault(); 

            if($("#txtRL").val() != ""){
                $.ajax({
                    url:"./record",
                    type:"POST",
                    data:{
                        recordLocator: $("#txtRL").val() || ''
                    },
                    contentType:"application/x-www-form-urlencoded; charset=UTF-8",
                    dataType:"json",
                    statusCode: {
                        200: function (response) {
                            $('.eachSegment').remove();
                            $('#insertPN').text($("#txtRL").val())

                            if(response.originDestinationDetails.itineraryInfo.length == undefined){
                                var flight = response.originDestinationDetails.itineraryInfo;
                                var originalDate = flight.travelProduct.product.depDate;
                                var orginalDateOfCreation = response.securityInformation.secondRpInformation.creationDate;

                                    $('#showResults').append(
                                        '<tr class="eachSegment">' +
                                            '<td>' + flight.elementManagementItinerary.reference.number + '</td>' +
                                            '<td>' + response.travellerInfo.passengerData.travellerInformation.passenger.firstName + ' ' + response.travellerInfo.passengerData.travellerInformation.traveller.surname +'</td>' +
                                            '<td>' + moment(originalDate, 'DDMMYY').format('YYYY-MM-DD') + '</td>' +
                                            '<td>' + response.securityInformation.responsibilityInformation.officeId + '</td>' +
                                            '<td>' + response.securityInformation.responsibilityInformation.agentId + '</td>' +
                                            '<td>' + moment(orginalDateOfCreation, 'DDMMYY').format('YYYY-MM-DD') + '</td>' +
                                        '</tr>' 
                                    );

                                
                                $("#tblPnr").show();

                                $("#txtRL").val('');
                            }else{
                                response.originDestinationDetails.itineraryInfo.forEach(function(flight){
                                var originalDate = flight.travelProduct.product.depDate;
                                var orginalDateOfCreation = response.securityInformation.secondRpInformation.creationDate;

                                    $('#showResults').append(
                                        '<tr class="eachSegment">' +
                                            '<td>' + flight.elementManagementItinerary.reference.number + '</td>' +
                                            '<td>' + response.travellerInfo.passengerData.travellerInformation.passenger.firstName + ' ' + response.travellerInfo.passengerData.travellerInformation.traveller.surname +'</td>' +
                                            '<td>' + moment(originalDate, 'DDMMYY').format('YYYY-MM-DD') + '</td>' +
                                            '<td>' + response.securityInformation.responsibilityInformation.officeId + '</td>' +
                                            '<td>' + response.securityInformation.responsibilityInformation.agentId + '</td>' +
                                            '<td>' + moment(orginalDateOfCreation, 'DDMMYY').format('YYYY-MM-DD') + '</td>' +
                                        '</tr>' 
                                    );
                                });
                                
                                $("#tblPnr").show();

                                $("#txtRL").val('');
                            }
                        }
                    }
                })
            }else{
                alert("Input record locator");
            }

            

        });

    });


    

